<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-3">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
      <div class="col-md-3">
        <%= f.input :name, required: true %>
      </div>
      <div class="col-md-3">
        <%= f.input :age, required: true, prompt: "-- Select one --", collection: ["13-17", "18-24", "25-34", "35-49", "50-64", "65+"] %>
      </div>
      <div class="col-md-3">
        <%= f.input :race, label: "Ethnicity", collection: ["Asian", "Black", "Latino", "White"], prompt: "-- Select one --", required: true %>
      </div>
      <div class="col-md-3">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
      </div>
      <div class="col-md-3">
        <%= f.input :password_confirmation, required: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
